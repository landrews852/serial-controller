{
  "name": "serial-controller",
  "private": true,
  "version": "1.0.0",
  "main": "dist/electron.cjs",
  "scripts": {
    "dev": "concurrently \"npm run react\" \"npm run electron:dev\"",
    "react": "vite",
    "electron:dev": "tsc -p tsconfig.electron.json && mv dist/electron.js dist/electron.cjs && wait-on http://localhost:5173 && electron dist/electron.cjs",
    "build": "vite build && tsc -p tsconfig.electron.json && mv dist/electron.js dist/electron.cjs",
    "start": "electron dist/electron.cjs",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serialport": "^13.0.0",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "mv-cli": "^0.0.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.getjusto.serial-controller",
    "files": [
      "dist/**/*",
      "dist/electron.cjs",
      "dist/preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "arch": [
        "x64",
        "ia32"
      ]
    },
    "mac": {
      "target": "dmg"
    }
  }
}
